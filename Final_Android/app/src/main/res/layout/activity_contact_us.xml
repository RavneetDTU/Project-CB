<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light"
    tools:context="com.example.ravneet.final_project.Activity.ContactUsActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/bookthumb1" />

    <TextView
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:layout_margin="15dp"
        android:textSize="25sp"
        android:text="We Will Love to hear from you.
In Case you face Any Problem or any Query Please write us at:

                    info@bookstore.in"/>

</LinearLayout>
